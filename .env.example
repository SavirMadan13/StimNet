# Example environment configuration file
# Copy this to .env and customize for your deployment

# =============================================================================
# NODE IDENTIFICATION
# =============================================================================
NODE_ID=my-institution-node
NODE_NAME=My Research Institution Node
INSTITUTION_NAME=My Research Institution

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=change-this-to-a-secure-random-key-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
DEBUG=false
HOST=0.0.0.0
PORT=8000
APP_NAME=Distributed Node Server
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/distributed_framework

# For SQLite (development only)
# DATABASE_URL=sqlite:///./distributed_node.db

# =============================================================================
# REDIS CONFIGURATION (for job queue and caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# DATA AND EXECUTION SETTINGS
# =============================================================================
DATA_ROOT=./data
WORK_DIR=./work
MAX_EXECUTION_TIME=3600
MAX_MEMORY_MB=4096
MAX_CPU_CORES=4

# =============================================================================
# PRIVACY AND SECURITY CONTROLS
# =============================================================================
MIN_COHORT_SIZE=10
ENABLE_DIFFERENTIAL_PRIVACY=false
PRIVACY_EPSILON=1.0

# =============================================================================
# ALLOWED SCRIPT TYPES
# =============================================================================
# Comma-separated list: python,r,sql,jupyter
ALLOWED_SCRIPT_TYPES=python,r,sql,jupyter

# =============================================================================
# DOCKER SETTINGS
# =============================================================================
DOCKER_REGISTRY=localhost:5000
EXECUTION_IMAGE_PYTHON=python:3.11-slim
EXECUTION_IMAGE_R=r-base:4.3.2

# =============================================================================
# NETWORK SETTINGS
# =============================================================================
# Comma-separated list of trusted node endpoints
TRUSTED_NODES=node1.partner.edu,node2.research.org
REQUIRE_TLS=true
REQUIRE_CLIENT_CERT=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=
ENABLE_AUDIT_LOG=true
AUDIT_LOG_FILE=./audit.log